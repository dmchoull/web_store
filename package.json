{
  "name": "web_store",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "node src/server/server.js",
    "build": "next build",
    "start": "NODE_ENV=production PORT=8080 node src/server/server.js",
    "deploy": "now --public -e BB_API_KEY=@bb-api-key",
    "test": "jest",
    "test:watch": "jest --watch --notify",
    "lint": "eslint pages __mocks__ cypress --ext .js --ext .jsx"
  },
  "browserslist": [
    "> 1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn run lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "yarn test && ./e2e.sh",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add",
      "jest --findRelatedTests"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "airbnb-prop-types": "^2.9.0",
    "axios": "^0.18.0",
    "bestbuy": "^2.1.3",
    "express": "^4.16.3",
    "next": "^7.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@commitlint/cli": "^7.1.1",
    "@commitlint/config-conventional": "^7.1.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.4.2",
    "cypress": "^3.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "dom-testing-library": "^3.4.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-compat": "^2.5.1",
    "eslint-plugin-cypress": "^2.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.5.0",
    "jest-dom": "^1.12.0",
    "jest-runner-eslint": "^0.6.0",
    "jest-watch-typeahead": "^0.2.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react-testing-library": "^5.0.0",
    "yarnhook": "^0.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
